<h2>Listing Articles</h2>
<p class="button"><%= link_to("Create Article", new_article_path) %></p>
<table>
	<thead>
		<tr>
			<td class="tableHead">Title</td>
			<td class="tableHead">Text</td>
			<th colspan="3"></th>
		</tr>
	</thead>
<% @articles.each do |f| %>
	<tr>
		<td><%= f.title %></td>
		<td><%= f.text %></td>
		<td class="show"><%= link_to("Show", article_path(f)) %></td>
		<td class="edit"><%= link_to("Edit", edit_article_path(f)) %></td>
		<td class="delete"><%= link_to("Delete", article_path(f) , method: :delete, data: {confirm: 'Are you sure?'}) %></td>
	</tr>
<% end %>
</table>