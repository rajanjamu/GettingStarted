<p>
	<strong>Title: </strong>
	<%= @article.title %>
</p>

<p>
	<strong>Text: </strong>
	<%= @article.text %>
</p>

<h3>Comments</h3>
<% @article.comments.each do |comment| %>
	<p>
		<strong>Comemnter:</strong>
		<%= comment.commenter %>
	</p>
	<p>
		<strong>Comment:</strong>
		<%= comment.body %>
	</p>
<% end %>

<h3>Add a comment:</h3>
<%= form_for ([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :commenter %><br>
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_field :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to("Back", articles_path) %>
<%= link_to("Edit", edit_article_path(@article)) %>